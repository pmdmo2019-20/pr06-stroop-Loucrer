<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_margin_2x">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewAvatar"
        android:layout_width="@dimen/width_card_user"
        android:layout_height="@dimen/height_card_user"
        app:cardCornerRadius="@dimen/main_card_cornerRadius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="PrivateResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="@dimen/dashboard_card_image_size"
                android:layout_height="@dimen/dashboard_card_image_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_black_24dp"
                android:contentDescription="@string/imgContentDescription" />

            <View
                android:id="@+id/separater"
                android:layout_width="379dp"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="@color/primaryDark"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblUser"
                android:layout_width="75dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/textExampleView" />

            <TextView
                android:id="@+id/lblBarCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@color/primary"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>